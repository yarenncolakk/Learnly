
@{
    ViewBag.Title = "Student";
}

<div class="exam-menus">
    <div class="exam-menu">
        <h2>Türkçe Sınavı</h2>
        <ul class="achievements">
            <li>Kazanım 1: YAZIM KURALLARI</li>
            <li>Kazanım 2: NOKTALAMA KURALLARI</li>
            <li>Kazanım 3: FIILIMSILER</li>
            <li>Kazanım 4: CÜMLENIN ÖGELERI</li>
            <li>Kazanım 5: DEYIMLER VE ATASÖZLERI</li>
        </ul>
        @Html.ActionLink("Türkçe Sınavı Başlat", "StartExam", "Exam", new { branchId = 2 }, new { @class = "exam-link" })
    </div>
    <div class="exam-menu">
        <h2>Matematik Sınavı</h2>
        <ul class="achievements">
            <li>Kazanım 1: CEBIRSEL IFADELER VE ÖZDESLIKLER</li>
            <li>Kazanım 2: BASIT OLAYLARIN OLMA OLASILIGI</li>
            <li>Kazanım 3: DOGRUSAL DENKLEMLER</li>
            <li>Kazanım 4: ESITSIZLIKLER</li>
            <li>Kazanım 5: ÜÇGENLER/ESLIK-BENZERLIK</li>
        </ul>
        @Html.ActionLink("Matematik Sınavı Başlat", "StartExam", "Exam", new { branchId = 1 }, new { @class = "exam-link" })
    </div>
</div>
<style>
    .exam-menus {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        gap: 20px;
        margin-top: 50px;
    }

    .exam-menu {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        width: 300px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

        .exam-menu h2 {
            margin-bottom: 20px;
            font-size: 1.5em;
            color: #333;
        }

    .achievements {
        list-style-type: none;
        padding: 0;
        margin: 0 0 20px 0;
        text-align: left;
    }

        .achievements li {
            margin-bottom: 10px;
            font-size: 1em;
            color: #555;
        }

    .exam-link {
        display: inline-block;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .exam-link:hover {
            background-color: #0056b3;
        }
</style>