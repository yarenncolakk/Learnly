@{    
    ViewBag.Title = "Sınav Tamamlandı";
    int examId = ViewBag.ExamId;
    int correct = ViewBag.Correct;
    int incorroect = ViewBag.Incorrect;
}

<div class="complete-exam">
    <h2>Sınav Tamamlandı!</h2>
    <p>Sınavınız başarıyla tamamlandı. Sınav ID: @examId</p>
    <p>Doğru Cevap Sayınız: @correct</p>
    <p>Yanlış Cevap Sayınız: @incorroect</p>
    <br />
    <a href="@Url.Action("Student", "Default")" class="home-button">Ana Sayfaya Dön</a>
</div>

<style>
    .complete-exam {
        text-align: center;
        margin-top: 50px;
    }

    .home-button {
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #28a745;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .home-button:hover {
            background-color: #218838;
        }
</style>